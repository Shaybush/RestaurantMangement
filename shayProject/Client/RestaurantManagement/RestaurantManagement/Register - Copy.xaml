                     TextWrapping="Wrap"  />
                <TextBlock 
                       Grid.Row="1" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="17"
                       Text="User name"  />
                <TextBox x:Name="textBox2"
                     Grid.Row="2" Grid.Column="1"
                     Width="120"
                     Height="23"
                         Text="{Binding Password1}"
                     TextWrapping="Wrap"  
                    />
                <TextBlock 
                       Grid.Row="2" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="17"
                       Text="Password" Margin="0,10" />
                <TextBox x:Name="textBox3"
                     Grid.Row="3" Grid.Column="1"
                     Width="120"
                     Height="23"
                         Text="{Binding Name}"
                     TextWrapping="Wrap"  />
